# Strapi Configuration
STRAPI_BASE_URL=http://localhost:1337

# API Token for Content Localization (created in Strapi Admin)
# Go to: Settings → API Tokens → Create new API Token
STRAPI_API_TOKEN=your_api_token_here

# OpenAI Configuration (for AI translation workflow)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-5-mini
TRANSLATION_ENABLED=true

# Translation API Authentication
TRANSLATION_API_TOKEN=your_secure_api_token_here

# ===============================
# Docker Compose Core
# ===============================
# Docker Compose Configuration (already configured)
COMPOSE_PROJECT_NAME=soloai-dev

# ===============================
# MySQL (Docker internal)
# ===============================
COMPOSE_NETWORK=${COMPOSE_PROJECT_NAME}-docker
MYSQL_HOST=db.${COMPOSE_NETWORK}
BASE_PATH=your_desired_base_path_here
MYSQL_PORT=3306
MYSQL_DATABASE=mautic_db
MYSQL_USER=mautic_db_user
MYSQL_STRAPI_USER=strapi_db_user
MYSQL_PASSWORD=superSecretUserPwd
MYSQL_ROOT_PASSWORD=superSecretRootPwd

